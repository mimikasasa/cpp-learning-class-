#include<iostream>
using namespace std;

struct node
{	
	int data;
	node* next;
};
node*head;

node* createList()
{
	node* s, * p;
	s = new node;
	cin >> s->data;
	head = NULL;
	while (s->data!=0)
	{	
		if (head == NULL)
		{
			head = s;
		}
		else p->next = s;
		p = s;
		s = new node;
		cin >> s->data;
	}
	p->next = NULL;
	delete s;
	return(head);
}

int main()
{

	system("pause");
	return 0;
}
