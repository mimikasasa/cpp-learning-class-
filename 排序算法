#include<iostream>
using namespace std;

void selectionsort(int x[],int size)
{
	int temp, p;
	for (int i = 0; i < size-1; i++)
	{
		p = i;
		for (int j = i+1; j <size ; j++)
		{
			if (x[p]>x[j])
			{
				p = j;
			}
		}
		temp = x[i];
		x[i] = x[p];
		x[p] = temp;
	}
}


int main() {

	int arr[7] = { 5,3,7,2,8,9,4 };
	for (int k = 0; k < 7; k++)
	{
		cout << "arr[" << k << "]=" << arr[k] << "\t";
	}
	cout << endl;


	selectionsort(arr, 7);
	for (int k = 0; k < 7; k++)
	{
		cout << "arr[" << k << "]=" << arr[k] << "\t";
	}
	cout << endl;

	system("pause");
	return 0;
}
