#include<iostream>
#include<iomanip>
using namespace std;

void swap1(int* const element1p, int* const element2p)
{
	int temp = *element1p;
	*element1p = *element2p;
	*element2p = temp;
}

void selectionSort(int* const array, const int size)
{
	int* pMin;
	for (int i = 0; i < size - 1; i++)
	{
		pMin = &array[i];
		for (int index = i + 1; index < size; index++)
		{
			if (*pMin > array[index])
			{
				pMin = &array[index];
			}
		}
		swap1(&array[i], pMin);
	}
}

int main()
{
	const int arraysize = 10;
	int arr[arraysize] = { 2,6,12,4,8,10,45,37,68,89 };
	cout << "data items in original order:" << endl;
	for (int i = 0; i < 10; i++)
		cout << setw(4) << arr[i];
	cout << endl;

	selectionSort(arr, arraysize);
	cout << "data items in ascending order:" << endl;
	for (int j = 0; j < 10; j++)
		cout << setw(4) << arr[j];

	system("pause");
	return 0;
}
