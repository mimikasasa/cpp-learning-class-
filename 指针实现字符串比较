#include<iostream>
#include<string>
using namespace std;

bool stringLessthan(const char* a, const char* b)
{
	if (*a&&*b&&*a==*b)
	{
		a++, b++;
	}
	return *a > *b;
}

int main()
{
	const char* p[5] = { "china","america","brazil","india","russia"};//注意const

	p[0] = "chinaa";//这种赋值方法是危险的  尽管在c++中编译器不会报错
	cout << (p[1] > p[0] ? p[1] : p[0]);

	for (int i = 0; i < 5; i++)
	{
		cout << "arr[" << i << "]=" << p[i] << "\t";
	}
	cout << endl;

	for (int i = 0; i < 5; i++)
	{
		int minIndex = i;
		for (int j = i+1; j < 5; j++)
		{
			if (stringLessthan(p[minIndex], p[j]))
				minIndex = j;
		}
		if (i!=minIndex)
		{	
			const char* b = p[i];
			p[i] = p[minIndex];
			p[minIndex] = b;
		}
	}

	for (int i = 0; i < 5; i++)
	{
		cout << "arr[" << i << "]=" << p[i] << "\t";
	}

	system("pause");
	return 0;
}
