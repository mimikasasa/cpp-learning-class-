#include<iostream>
using namespace std;

void selectionsort(int x[], int size)
{
	int temp, minIndex;
	for (int i = 0; i < size-1; i++)
	{	
		minIndex = i;
		for (int j = i+1; j < size; j++)
		{	
			if (x[minIndex] > x[j]) minIndex = j;
		}
		if(minIndex!=i)
		{temp = x[i];
		x[i] = x[minIndex];
		x[minIndex] = temp;
		}
	}
}

int main() {

	int arr[7] = { 5,3,7,2,8,9,4 };
	for (int k = 0; k < 7; k++)
	{
		cout << "arr[" << k << "]=" << arr[k] << "\t";
	}
	cout << endl;

	selectionsort(arr, 7);
	for (int k = 0; k < 7; k++)
	{
		cout << "arr[" << k << "]=" << arr[k] << "\t";
	}
	cout << endl;

	system("pause");
	return 0;
}
