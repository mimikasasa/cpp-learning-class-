#include<iostream>
#include<string>
using namespace std;

//const的使用场景
 
struct student
{
	string name;
	int age;
	int score;
};

//将函数中的形参改为指针  可以减少内存空间  而且不会复制新的副本出来（值传递要传的数据有多少就复制多少内存）
void printstudents(const student *s)
{
	//s->age = 20;  加入const之后一旦有修改的操作就会报错  可以防止我们的误操作 
	cout << "name:" << s->name << "  age:" << s->age << "  score:" << s->score << endl;
}

int main6() {
	
	//创建结构体变量 
	struct student s = { "wem",18,120 };

	//通过函数打印结构体变量信息
	printstudents(&s);
	cout << "main中 age:" << s.age << endl;

	system("pause");
	return 0;
}
