#include <iostream>
using namespace std;

int main() {
    int size = 10; // 假设我们想要一个大小为10的数组
    int* myArray = new int[size]; // 动态分配一个整数数组

    // 使用数组进行一些操作
    for (int i = 0; i < size; ++i) {
        myArray[i] = i * i; // 例如：存储每个索引的平方
    }

    // 打印数组内容
    for (int i = 0; i < size; ++i) {
      cout << "myArray[" << i << "] = " << myArray[i] << endl;
    }

    delete[] myArray; // 不要忘记释放分配的内存

    return 0;
}
